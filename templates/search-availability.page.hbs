{{template "base"  .}}

{{define "content"}}
   <div class="container">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <h1 class="text-center mt-5 mb-3">Search for Availability</h1>

        <form action="/search-availability" method="post" novalidate class="needs-validation">
        <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
          <div class="form-row mt-5">
            <div class="form-row row" id="reservation-dates">
              <div class="col">
                <label for="start-date" class="form-label">Starting date<sup style="color: red;">*</sup> </label>
                <input required class="form-control" type="text" name="start" autocomplete="off">
              </div>
              <div class="col">
                <label for="end-date" class="form-label">Ending date<sup style="color: red;">*</sup> </label>
                <input required class="form-control" type="text" name="end" autocomplete="off">
              </div>
            </div>
          </div>
          <hr>
          <button type="submit" id="search_availability" class="btn btn-success mx-auto d-block mt-3">Search
            Availability</button>
        </form>
      </div>
      <div class="col-md-3"></div>
    </div>
    <div class="row">
      <div class="col">
        <p id="myParagraph">This is some text.</p>
        <p>
          <button id="colorButton" class="btn btn-outline-secondary">Click me</button>
        </p>
      </div>
    </div>
  </div>
{{end}}


{{define "js"}}
<script>
  const elem = document.getElementById('reservation-dates');
        const rangepicker = new DateRangePicker(elem, {
            // ...options
            format: "dd-mm-yyyy"
        });
</script>
{{end}}
 